#content-container
  #breadcrumb
    News
    #view-as-grid
      = link_to '/news' do
        = image_tag("list.gif")
        view as list
  #news-grid
    - @posts.each do |post|
      = link_to "/news/#{post.id}", :class => "project" do
        = image_tag post.thumb.url
        .caption
          .artist-name= post.artist.name
          .slash= "/"
          .client= post.client
