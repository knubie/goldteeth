#content-container
  = render "breadcrumb"
  #controls
    #left
      = link_to image_tag("grid.gif"), "#{request.fullpath}/grid"
      %span#current-slide= ''
      \/
      %span#total-slides= "#{@project.slides.length}"
      &nbsp;&nbsp;|&nbsp;&nbsp;
      = link_to 'prev', 'javascript:void(0);', :id => 'prev'
      &nbsp;&nbsp;|&nbsp;&nbsp;
      = link_to 'next', 'javascript:void(0);', :id => 'next'
    #right
      %a(href="/")
        = image_tag "facebook.gif"
        share
      %a(href="/")
        = image_tag "twitter.gif"
        tweet
      = link_to "/", :id => "lightbox", :remote => true do
        = image_tag "add_to_lightbox.gif", :style => "margin-bottom: -2px;"
        add to portfolio
  #slides
    - @project.slides.each do |slide|
      %img{:src => slide.image.url, :data => {:id => slide.id}}
      / = image_tag slide.image.url
  #subtext
    - if @project.client
      #client= @project.client
    - if @project.subtitle
      #description= @project.subtitle
