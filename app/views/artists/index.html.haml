#content-container
  - @artists.each do |artist|
    = link_to artist_path(artist.url_name), :class => "artist" do
      - if artist.artist_thumbs.length > 0
        = image_tag artist.artist_thumbs[rand(artist.artist_thumbs.length)].image.url
      - else
        = image_tag artist.image.url
      = artist.name
