#content-container
  #breadcrumb
    = @artist.name
    .slash &nbsp;/&nbsp;
    .second portfolio
  .artist-section.portfolio
    - @artist.projects.each do |project|
      = link_to "/#{@artist.name.downcase.gsub(" ", "-")}/#{project.title.downcase.gsub(" ", "-")}" do
        .project
          = image_tag project.image.url
          .caption
            = project.title
  - unless @recent_work.empty?
    .artist-section.recent-work
      .artist-heading
        recent work
      - @recent_work.each do |post|
        = link_to "/news/#{post.id}" do
          .project
            = image_tag post.thumb.url
            .caption
              = post.client
  .artist-section.bio
    .artist-heading
      biography
    = @artist.bio.html_safe
    
