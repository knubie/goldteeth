#content-container
  #breadcrumb
    = @artist.name
    .slash &nbsp;/&nbsp;
    .second Projects &amp; Portfolios
  .artist-section.portfolio
    - @artist.projects.each do |project|
      = link_to project_path(@artist.name.downcase.gsub(" ", "-"), project.title.downcase.gsub(" ", "-")) do
        .project
          = image_tag project.image.url
          .caption
            = project.title
  - unless @recent_work.empty?
    .artist-section.recent-work
      .artist-heading
        Recent Work
      - @recent_work.each do |post|
        /= link_to "/news/#{post.id}" do
        = link_to post_path(post.id) do
          .project
            = image_tag post.thumb.url
            .caption
              = post.client
  .artist-section.bio
    .artist-heading
      Biography
    = @artist.bio.html_safe
    
