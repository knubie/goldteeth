#content-container
  #breadcrumb
    = @artist.name
    .slash &nbsp;/&nbsp;
    .second portfolio
  .artist-section.portfolio
    - @artist.projects.each do |project|
      = link_to "/#{@artist.name.downcase.gsub(" ", "-")}/#{project.title.downcase.gsub(" ", "-")}" do
        .project
          = image_tag project.image.url
          .caption
            = project.title
  .artist-section.recent-work
    .artist-heading
      recent work
    - Post.find_all_by_artist_id(@artist.id)[0..3].each do |post|
      .project
        = image_tag post.thumb.url
        .caption
          = post.client
  .artist-section.bio
    .artist-heading
      biography
    = @artist.bio.html_safe
    
